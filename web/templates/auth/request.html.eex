<h2>Login</h2>

<%= form_tag @callback_url, method: "post" do %>
  <div class='control-group'>
    <label class='control-label' for='nickname-input'>Username</label>
    <input class='form-control' type='text' name='nickname' value='<%= @conn.params["username"] %>' />
  </div>

  <div class='control-group'>
    <label class='control-label' for='password-input'>Password</label>
    <input class='form-control' type='password' name='password' />
  </div>

  <div class='control-group'>
    <button class='btn btn-primary'>Login</button>
  </div>
<% end %>

